<style>
  select {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    background-image: url('{{ 'icon-chevron-down.svg' | asset_url }}');
    background-repeat: no-repeat;
    background-position: right 11px center;
  }
</style>

<div class="footer__contaier {{ section.settings.background-color }} ">
  <div class="footer__top">
    <div class="container">
      <div class="footer__blocks">
        <div class="row">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'information' %}
                <div class="col pd-top" style="--w-md: 4;">
                  <div class="footer__logo">
                    <img
                      class="w-100 d-block svg__icon"
                      src="{{ block.settings.logo-brand | img_url: 'medium' }}"
                      alt=""
                    >
                  </div>
                  {% if block.settings['show-social'] == true %}
                    <ul class="social__items d-flex align-center">
                      <li class="social__item">
                        <a class="d-inline-block" href="#">
                          <img class="svg__icon d-block" src="{{ "twitter.svg" | asset_url }}" alt="">
                        </a>
                      </li>
                      <li class="social__item">
                        <a class="d-inline-block" href="#">
                          <img class="svg__icon d-block" src="{{ "facebook.svg" | asset_url }}" alt="">
                        </a>
                      </li>
                      <li class="social__item">
                        <a class="d-inline-block" href="#">
                          <img class="svg__icon d-block" src="{{ "instagram.svg" | asset_url }}" alt="">
                        </a>
                      </li>
                      <li class="social__item">
                        <a class="d-inline-block" href="#">
                          <img class="svg__icon d-block" src="{{ "tiktok.svg" | asset_url }}" alt="">
                        </a>
                      </li>
                      <li class="social__item">
                        <a class="d-inline-block" href="#">
                          <img class="svg__icon d-block" src="{{ "youtube.svg" | asset_url }}" alt="">
                        </a>
                      </li>
                    </ul>
                  {% endif %}
                </div>
              {% when 'menu' %}
                <div class="col pd-top" style="--w-md: 4;">
                  <div class="footer__block">
                    <h3 class="block__heading">{{ block.settings['heading-menu'] }}</h3>
                    <ul class="list__items">
                      {% for link in block.settings['menu-footer'].links %}
                        <li class="list__item">
                          <a class="footer__anchor h5" href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              {% when 'text' %}
                <div class="col pd-top" style="--w-md: 4;">
                  <div class="footer__block">
                    <h3 class="block__heading">{{ block.settings['heading-text'] }}</h3>
                    <ul class="list__items">
                      <li class="list__item">
                        <span class="h5">{{ block.settings['content-text'] }}</span>
                      </li>
                    </ul>
                  </div>
                </div>
              {% when 'image' %}
                <div class="footer__image">
                  <img src="{{ block.image-footer | img_url: 'x1000' }}" alt="image footer">
                </div>
            {% endcase %}
          {% endfor %}
        </div>
        <div class="row align-center pd-section {% if section.settings['show-email-signup'] == false or section.settings.show-social-icon == false %} justify-center {%endif%}">
          {% if section.settings['show-email-signup'] == true %}
            <div class="col" style="--w-md: 8;">
              <div class="footer__subscribe">
                <h3 class="block__heading text-center">
                  {{ section.settings['heading-signup'] }}
                </h3>
                <div class="email-signup__form justify-center d-flex">
                  <div class="w-100 form__container p-relative">
                    {% form 'customer' %}
                      <input
                        class="email-signup__input btn h4 w-100"
                        type="email"
                        placeholder="email"
                        name="contact[email]"
                      >
                      <button type="submit" class="icon__input p-absolute">
                        <img class="svg__icon" src="{{ 'icon-nextlink.svg' | asset_url }}" alt="">
                      </button>
                    {% endform %}
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
          {% if section.settings['show-social-icon'] == true %}
            <div class="col" style="--w-md: 4;">
              <ul class="social__items d-flex {% if section.settings.show-email-signup == false %} text-center {% endif %}">
                <li class="social__item">
                  <a class="" href="#">
                    <img class="svg__icon d-block" src="{{ "twitter.svg" | asset_url }}" alt="">
                  </a>
                </li>
                <li class="social__item">
                  <a class="" href="#">
                    <img class="svg__icon d-block" src="{{ "facebook.svg" | asset_url }}" alt="">
                  </a>
                </li>
                <li class="social__item">
                  <a class="" href="#">
                    <img class="svg__icon d-block" src="{{ "instagram.svg" | asset_url }}" alt="">
                  </a>
                </li>
                <li class="social__item">
                  <a class="" href="#">
                    <img class="svg__icon d-block" src="{{ "tiktok.svg" | asset_url }}" alt="">
                  </a>
                </li>
                <li class="social__item">
                  <a class="" href="#">
                    <img class="svg__icon d-block" src="{{ "youtube.svg" | asset_url }}" alt="">
                  </a>
                </li>
              </ul>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  <div class="footer__bottom pd-top">
    <div class="container">
      <div class="row pd-40 p-relative space-between align-center">
        <div class="col footer__select-box d-flex" style="--w-md:4;">
          <div class="footer__select--item">
            <label for="select-country" class="select__label h6">Country/region</label>
            <div class="select__box">
              <select class="btn" name="country" id="select-country">
                <option value="1">Canada (CAD $)</option>
                <option value="2">VietNam (VNĐ)</option>
                <option value="3">Kored (WON ₩)</option>
                <option value="4">Japan (JPY ¥)</option>
              </select>
            </div>
          </div>
          <div class="footer__select--item">
            <label for="select-language" class="select__label h6">Language</label>
            <div class="select__box">
              <select class="btn" name="language" id="select-language">
                <option value="1">English</option>
                <option value="2">Vietnam</option>
                <option value="3">Kored</option>
                <option value="4">USA</option>
              </select>
            </div>
          </div>
        </div>
        <div class="col" style="--w-md:4;">
          <ul class="footer__listpay d-flex justify-center align-center">
            <li class="listpay__item d-flex">
              <img src="{{ 'shop-pay.png' | asset_url }}" alt="shop pay">
            </li>
            <li class="listpay__item d-flex">
              <img src="{{ 'visa.png' | asset_url }}" alt="visa">
            </li>
            <li class="listpay__item d-flex">
              <img src="{{ 'mastercard.png' | asset_url }}" alt="mastercard">
            </li>
            <li class="listpay__item d-flex">
              <img src="{{ 'apple-pay.png' | asset_url }}" alt="apple pay">
            </li>
            <li class="listpay__item d-flex">
              <img src="{{ 'google-pay.png' | asset_url }}" alt="google pay">
            </li>
            <li class="listpay__item d-flex">
              <img src="{{ 'amex.png' | asset_url }}" alt="amex">
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col text-center">
          <p class="footer__copy-right">© 2021, dawn-theme-default Powered by Shopify</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .footer {
    margin-top: {{ section.settings.top-margin }}px;
  }

  .footer__contaier {
     padding-top: {{ section.settings.pd-top }}px;
     padding-bottom: {{ section.settings.pd-bottom }}px;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer",
  "settings": [
    {
      "type": "select",
      "id": "background-color",
      "label": "Color scheme",
      "options": [
        {
          "value": "background-default",
          "label": "Background default"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        }
      ],
      "default": "background-default"
    },
    {
      "type": "header",
      "content": "EMAIL SIGNUP",
      "info": "Subscribers added automatically to your “accepted marketing” customer list."
    },
    {
      "type": "checkbox",
      "id": "show-email-signup",
      "label": "Show email sign up",
      "default": false
    },
    {
      "type": "text",
      "id": "heading-signup",
      "label": "Heading",
      "default": "Subscribe to our emails"
    },
    {
      "type": "header",
      "content": "SOCIAL MEDIA ICONS"
    },
    {
      "type": "checkbox",
      "id": "show-social-icon",
      "label": "Show social media icon",
      "default": false
    },
    {
      "type": "header",
      "content": "COUNTRY/REGION SELECTOR",
      "info": "To add a country/region, go to your"
    },
    {
      "type": "checkbox",
      "id": "enable-country",
      "label": "Enable country/region selector",
      "default": true
    },
    {
      "type": "header",
      "content": "LANGUAGE SELECTOR",
      "info": "To add a language, go to your"
    },
    {
      "type": "checkbox",
      "id": "enable-language",
      "label": "Enable language selector",
      "default": true
    },
    {
      "type": "header",
      "content": "PAYMENT METHODS"
    },
    {
      "type": "checkbox",
      "id": "show-payment",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "top-margin",
      "label": "Top margin",
      "min": 0,
      "max": 100,
      "unit": "px",
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "pd-top",
      "label": "Padding top",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "pd-bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "default": 16
    }
  ],
  "blocks": [
    {
      "name": "Brand information",
      "type": "information",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo-brand",
          "label": "Logo"
        },
        {
          "type": "checkbox",
          "id": "show-social",
          "label": "Show social",
          "info": "To display your social media accounts, link them in your"
        }
      ]
    },
    {
      "name": "Menu",
      "type": "menu",
      "settings": [
        {
          "type": "text",
          "id": "heading-menu",
          "label": "Heading",
          "default": "Quick link"
        },
        {
          "type": "link_list",
          "id": "menu-footer",
          "label": "Menu"
        }
      ]
    },
    {
      "name": "Text",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "heading-text",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "content-text",
          "label": "Subtext"
        }
      ]
    },
    {
      "name": "Image",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image-footer",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
